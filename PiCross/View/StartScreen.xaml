<Page x:Class="View.StartScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel" 
      xmlns:local="clr-namespace:View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartScreen">
    
    <Page.Resources>
        <viewmodel:StartUpScreen x:Key="viewModel"/>
    </Page.Resources>
    
    <Grid>
        
        <Button Height="275" Width="700" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Content="Picross" FontStyle="Oblique" FontSize="125" Click="Button_Click" BorderThickness="5" BorderBrush="Black" FontFamily="./Fonts/#MINECRAFT PE">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                    <GradientStop Color="#00a7ff" Offset="0"/>
                    <GradientStop Color="#c60000" Offset="0.567"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        
    </Grid>
    
</Page>
